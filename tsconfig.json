{
  "include": ["**/*"],
  "exclude": ["node_modules/**/*", "e2e/**/*", "examples/**/*"],
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strict": true,

    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "jsx": "react",

    "lib": ["esnext", "dom"]
  }
}
