{
  "type": "module",
  "version": "2.2.2",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 16.14"
  },
  "scripts": {
    "start": "start-storybook -p 6006",
    "prestart": "yarn build:core:esm",
    "storybook:build": "build-storybook -o public",
    "prestorybook:build": "yarn build:core:esm",
    "prebuild": "shx rm -rf packages/*/dist",
    "build": "concurrently yarn:build:*",
    "build:core:css": "sass packages/core/style:packages/core/dist --no-source-map -s compressed",
    "postbuild:core:css": "shx mkdir -p packages/core/dist/themes && shx cp -R node_modules/@onfido/castor-tokens/dist/*.css packages/core/dist/themes",
    "build:core:esm": "tsc -p packages/core/tsconfig.json",
    "build:react:esm": "tsc -p packages/react/tsconfig.json",
    "preprototype": "shx rm -f packages/*/prototype.js*",
    "prototype": "esbuild packages/react/src/index.ts --outfile=packages/react/prototype.js --bundle --define:process.env.NODE_ENV=\\\"production\\\" --target=es2015 --sourcemap --global-name=Castor",
    "lint": "concurrently yarn:lint:*",
    "lint:commit": "commitlint --from origin/main --to HEAD --verbose",
    "lint:es": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:ts": "tsc --noEmit",
    "lint:style": "stylelint '**/*.{,s}css' --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .gitignore",
    "preinspect": "yarn build && yarn prototype",
    "inspect": "bundlewatch --config .bundlewatchrc.json",
    "test": "jest --coverage",
    "ui": "concurrently yarn:e2e:serve yarn:ui:open",
    "ui:open": "yarn cypress open --env failOnSnapshotDiff=false",
    "e2e": "concurrently -k --success first yarn:e2e:*",
    "poste2e": "nyc report -r text -r text-summary",
    "e2e:run": "wait-on http://localhost:6006 && yarn cypress run -c video=true",
    "e2e:serve": "NODE_ENV=e2e yarn start --ci --quiet",
    "screenshot": "CYPRESS_updateSnapshots=true yarn e2e",
    "baseline": "FOLDER=e2e/.screenshots; shx rm -rf $FOLDER && gh run download -n screenshots -D $FOLDER $(gh run list -w test | grep -m 1 $(git branch --show-current) | sed 's/.*\\([0-9]\\{10\\}\\).*/\\1/g')",
    "postinstall": "yarn integrate && if test -d .git; then husky install; fi",
    "integrate": "FOLDER=packages/core/src/integrated/tokens; shx rm -rf $FOLDER && shx mkdir -p $FOLDER && shx cp -R node_modules/@onfido/castor-tokens/src/* $FOLDER",
    "release": "HUSKY=0 standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@cypress/code-coverage": "^3.10.0",
    "@onfido/castor-icons": "*",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-controls": "^6.5.10",
    "@storybook/addon-docs": "^6.5.10",
    "@storybook/addon-google-analytics": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-toolbars": "^6.5.10",
    "@storybook/addons": "^6.5.3",
    "@storybook/components": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/theming": "^6.5.3",
    "@types/cypress-image-snapshot": "^3.1.6",
    "@types/jest": "^27.5.0",
    "@types/react": "^17.0.43",
    "@types/react-textarea-autosize": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.36.0",
    "@typescript-eslint/parser": "^5.36.0",
    "bundlewatch": "^0.3.3",
    "commitizen": "^4.2.5",
    "concurrently": "^7.3.0",
    "cypress": "^9.7.0",
    "cypress-image-snapshot": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.15.6",
    "esbuild-loader": "^2.20.0",
    "eslint": "^8.23.0",
    "eslint-plugin-react": "^7.31.7",
    "eslint-plugin-storybook": "^0.6.4",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "optimist": "^0.6.1",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.54.8",
    "sass-loader": "^10.2.0",
    "shx": "^0.3.4",
    "standard-version": "^9.5.0",
    "stylelint": "^14.11.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.1"
  }
}
