{
  "type": "module",
  "version": "1.0.0-rc.2",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "prestart": "yarn generate",
    "start": "start-storybook -p 6006",
    "generate": "concurrently yarn:generate:*",
    "generate:tokens": "esbuild scripts/generate-tokens.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | node",
    "prebuild": "shx rm -rf packages/*/dist && yarn generate",
    "build": "concurrently yarn:build:*",
    "build:core:css": "sass packages/core/style:packages/core/dist --no-source-map -s compressed",
    "build:core:esm": "tsc -p packages/core/tsconfig.json",
    "build:react:esm": "tsc -p packages/react/tsconfig.json",
    "lint": "concurrently yarn:lint:*",
    "lint:commit": "commitlint --from origin/main --to HEAD --verbose",
    "lint:es": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:style": "stylelint '**/*.{,s}css' --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .gitignore",
    "test": "jest --coverage",
    "release": "HUSKY_SKIP_HOOKS=true standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@onfido/castor-icons": "^1.1.0",
    "@storybook/addon-a11y": "^6.1.14",
    "@storybook/addon-controls": "^6.1.14",
    "@storybook/addon-docs": "^6.1.14",
    "@storybook/addon-google-analytics": "^6.1.14",
    "@storybook/addon-toolbars": "^6.1.14",
    "@storybook/components": "^6.1.14",
    "@storybook/react": "^6.1.14",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/theo": "^8.1.3",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "commitizen": "^4.2.2",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.8.31",
    "eslint": "^7.17.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "optimist": "^0.6.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.32.4",
    "sass-loader": "^10.1.1",
    "shx": "^0.3.3",
    "standard-version": "^9.1.0",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "theo": "^8.1.5",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
