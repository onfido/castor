{
  "type": "module",
  "version": "1.3.0",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "postinstall": "husky install",
    "prestart": "yarn generate",
    "start": "start-storybook -p 6006",
    "generate": "concurrently yarn:generate:*",
    "generate:tokens": "esbuild scripts/generate-tokens.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | node",
    "generate:theme:day": "esbuild scripts/generate-theme.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | THEME_NAME=day COLOR_SCHEME=light node",
    "generate:theme:night": "esbuild scripts/generate-theme.ts --bundle --platform=node --target=es2019 --format=cjs --external:theo | THEME_NAME=night COLOR_SCHEME=dark node",
    "prebuild": "shx rm -rf packages/*/dist && yarn generate",
    "build": "concurrently yarn:build:*",
    "build:core:css": "sass packages/core/style:packages/core/dist --no-source-map -s compressed",
    "build:core:esm": "tsc -p packages/core/tsconfig.json",
    "build:react:esm": "tsc -p packages/react/tsconfig.json",
    "preprototype": "shx rm -f packages/*/prototype.js*",
    "prototype": "concurrently yarn:prototype:*",
    "prototype:react": "esbuild packages/react/src/index.ts --outfile=packages/react/prototype.js --bundle --define:process.env.NODE_ENV=\\\"production\\\" --target=es2015 --sourcemap --global-name=Castor",
    "lint": "concurrently yarn:lint:*",
    "lint:commit": "commitlint --from origin/main --to HEAD --verbose",
    "lint:es": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:style": "stylelint '**/*.{,s}css' --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .gitignore",
    "test": "jest --coverage",
    "e2e": "concurrently -k --success first yarn:e2e:*",
    "poste2e": "nyc report -r text -r text-summary",
    "pree2e:run": "shx mkdir -p cypress",
    "e2e:run": "wait-on http://localhost:6006 && cypress run -c video=true",
    "e2e:serve": "NODE_ENV=e2e yarn start --ci --quiet",
    "snapshot": "CYPRESS_updateSnapshots=true yarn e2e",
    "release": "HUSKY=0 standard-version",
    "check-bundle-size": "yarn build && yarn run bundlewatch --config .bundlewatchrc.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@cypress/code-coverage": "^3.9.5",
    "@onfido/castor-icons": "*",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-controls": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-google-analytics": "^6.2.9",
    "@storybook/addon-toolbars": "^6.2.9",
    "@storybook/components": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@types/cypress-image-snapshot": "^3.1.5",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.8",
    "@types/theo": "^8.1.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "bundlewatch": "^0.3.2",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "cypress": "^7.4.0",
    "cypress-image-snapshot": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.3",
    "eslint": "^7.27.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "optimist": "^0.6.1",
    "prettier": "^2.2.1",
    "prettier-plugin-organize-imports": "^2.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.34.0",
    "sass-loader": "^10.2.0",
    "shx": "^0.3.3",
    "standard-version": "^9.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "theo": "^8.1.5",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0"
  }
}
