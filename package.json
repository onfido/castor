{
  "type": "module",
  "version": "1.5.0",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "postinstall": "yarn integrate && if test -d .git; then husky install; fi",
    "start": "start-storybook -p 6006 --modern",
    "preintegrate": "shx rm -rf packages/*/src/integrated",
    "integrate": "concurrently yarn:integrate:*",
    "preintegrate:core:tokens": "shx mkdir -p packages/core/src/integrated/tokens",
    "integrate:core:tokens": "shx cp -R node_modules/@onfido/castor-tokens/src/* packages/core/src/integrated/tokens",
    "prebuild": "shx rm -rf packages/*/dist",
    "build": "concurrently yarn:build:*",
    "build:core:css": "sass packages/core/style:packages/core/dist --no-source-map -s compressed",
    "postbuild:core:css": "shx mkdir -p packages/core/dist/themes && shx cp -R node_modules/@onfido/castor-tokens/dist/*.css packages/core/dist/themes",
    "build:core:esm": "tsc -p packages/core/tsconfig.json",
    "build:react:esm": "tsc -p packages/react/tsconfig.json",
    "preprototype": "shx rm -f packages/*/prototype.js*",
    "prototype": "concurrently yarn:prototype:*",
    "prototype:react": "esbuild packages/react/src/index.ts --outfile=packages/react/prototype.js --bundle --define:process.env.NODE_ENV=\\\"production\\\" --target=es2015 --sourcemap --global-name=Castor",
    "lint": "concurrently yarn:lint:*",
    "lint:commit": "commitlint --from origin/main --to HEAD --verbose",
    "lint:es": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:ts": "tsc --noEmit",
    "lint:style": "stylelint '**/*.{,s}css' --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .gitignore",
    "test": "jest --coverage",
    "e2e": "concurrently -k --success first yarn:e2e:*",
    "poste2e": "nyc report -r text -r text-summary",
    "e2e:run": "CYPRESS_baseUrl=http://host.docker.internal:6006 docker-compose up --abort-on-container-exit --exit-code-from cypress",
    "e2e:serve": "NODE_ENV=e2e yarn start --ci --quiet",
    "snapshot": "CYPRESS_updateSnapshots=true yarn e2e",
    "inspect": "concurrently yarn:inspect:*",
    "preinspect:bundle-size": "yarn build && yarn prototype",
    "inspect:bundle-size": "bundlewatch --config .bundlewatchrc.json",
    "release": "HUSKY=0 standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@cypress/code-coverage": "^3.9.11",
    "@onfido/castor-icons": "*",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-controls": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-google-analytics": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-toolbars": "^6.3.8",
    "@storybook/components": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@types/cypress-image-snapshot": "^3.1.6",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.1",
    "bundlewatch": "^0.3.2",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.1",
    "cypress": "^8.4.0",
    "cypress-image-snapshot": "^4.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.28",
    "esbuild-loader": "^2.15.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.25.1",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "optimist": "^0.6.1",
    "prettier": "^2.4.0",
    "prettier-plugin-organize-imports": "^2.3.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.40.0",
    "sass-loader": "^10.2.0",
    "shx": "^0.3.3",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "wait-on": "^6.0.0"
  }
}
