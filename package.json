{
  "type": "module",
  "version": "1.0.0-rc.2",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "start": "start-storybook -p 6006",
    "prebuild": "shx rm -rf packages/*/dist",
    "build": "concurrently yarn:build:*",
    "build:core:css": "sass packages/core/style:packages/core/dist --no-source-map -s compressed",
    "build:core:esm": "tsc -p packages/core/tsconfig.json",
    "build:react:esm": "tsc -p packages/react/tsconfig.json",
    "lint": "concurrently yarn:lint:*",
    "lint:commit": "commitlint --from origin/main --to HEAD --verbose",
    "lint:es": "eslint . --ignore-path .gitignore --max-warnings 0",
    "lint:style": "stylelint '**/*.{,s}css' --ignore-path .gitignore --max-warnings 0",
    "lint:prettier": "prettier . --check --ignore-path .gitignore",
    "test": "jest --coverage",
    "release": "HUSKY_SKIP_HOOKS=true standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@onfido/castor-icons": "^1.1.0",
    "@storybook/addon-a11y": "^6.1.11",
    "@storybook/addon-controls": "^6.1.11",
    "@storybook/addon-docs": "^6.1.11",
    "@storybook/addon-google-analytics": "^6.1.11",
    "@storybook/addon-toolbars": "^6.1.11",
    "@storybook/components": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.12.0",
    "commitizen": "^4.2.2",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.17.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "shx": "^0.3.3",
    "standard-version": "^9.1.0",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
